@model SimplBlog.ViewModels.PostsPageViewModel
@using SimplBlog.Services

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    @section Css{
        <link href="~/css/social-share.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />
    }
    @section Breadcrumb{
        @Html.Raw(RouteHelper.BreadcrumbCategoryPosts())
    }
    @Html.Partial("_ListPosts", Model.ListPost)
}

